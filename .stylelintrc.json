{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "scss/at-rule-no-unknown": [true, {
      "ignoreAtRules": ["mixin", "extend", "content", "function", "if", "each", "include", "mixin", "for", "elseif", "return"]
    }],
    "at-rule-no-unknown": null
  }
}
